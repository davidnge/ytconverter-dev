<script>
  // Keep track of the active conversion ID and any polling intervals
  let activeConversionId = null;
  let pollingInterval = null;
  
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('conversion-form');
    
    // Check for conversion_id in URL and handle it
    const urlParams = new URLSearchParams(window.location.search);
    const conversionId = urlParams.get('conversion_id');
    
    if (conversionId) {
      // Remove the parameter from URL without reloading
      window.history.replaceState({}, document.title, window.location.pathname);
      
      // Load the conversion status if ID is in URL
      fetchAndShowConversionStatus(conversionId);
    }
    
    if (form) {
      form.addEventListener('submit', function(event) {
        event.preventDefault();
        
        const formData = new FormData(form);
        const youtubeUrl = formData.get('conversion[url]');
        
        // Validate YouTube URL before submitting (including Shorts)
        const youtubeRegex = /^(https?:\/\/)?(www\.)?(youtube\.com\/(watch\?v=|shorts\/)|youtu\.be\/).+/;
        if (!youtubeRegex.test(youtubeUrl)) {
          alert('Please enter a valid YouTube URL or YouTube Shorts URL');
          return; // Stop here and don't proceed with form submission
        }
        
        // Show loading state
        const submitButton = form.querySelector('input[type="submit"]');
        submitButton.value = 'Converting...';
        submitButton.disabled = true;
        
        fetch('/conversions', {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json',
            'X-Requested-With': 'XMLHttpRequest',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
          },
          credentials: 'same-origin'
        })
        .then(response => response.json())
        .then(data => {
          console.log('Success:', data);
          if (data.errors) {
            // Handle validation errors from the server
            alert('Error: ' + data.errors.join(', '));
            submitButton.value = 'Convert';
            submitButton.disabled = false;
          } else {
            // Save the active conversion ID
            activeConversionId = data.id;
            
            // Fetch and show the conversion status
            fetchAndShowConversionStatus(data.id);
            
            // Failsafe: If status doesn't load properly in 5 seconds, redirect to show page
            setTimeout(function() {
              const statusContainer = document.getElementById('conversion-status-container');
              if (statusContainer && statusContainer.classList.contains('hidden')) {
                console.log("Status container still hidden after timeout, redirecting to show page");
                window.location.href = `/conversions/${data.id}`;
              }
            }, 5000);
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('An error occurred. Please try again.');
          submitButton.value = 'Convert';
          submitButton.disabled = false;
        });
      });
    }
    
    // Handle "Convert Another Video" links globally
    document.addEventListener('click', function(event) {
      const link = event.target.closest('a[href="/"]');
      if (link) {
        event.preventDefault();
        
        // Stop any active polling
        clearPolling();
        
        // Reset to initial state
        resetToInitialState();
      }
    });
  });
  
  function fetchAndShowConversionStatus(conversionId) {
    console.log(`Fetching status for conversion ${conversionId}`);
    
    fetch(`/conversions/${conversionId}/status`, {
      headers: { 'Cache-Control': 'no-cache' }
    })
      .then(response => {
        if (!response.ok) {
          throw new Error(`HTTP error! Status: ${response.status}`);
        }
        return response.text();
      })
      .then(html => {
        // Hide the form and show the status
        document.getElementById('conversion-form-container').classList.add('hidden');
        const statusContainer = document.getElementById('conversion-status-container');
        statusContainer.innerHTML = html;
        statusContainer.classList.remove('hidden');
        
        // Get initial status
        const statusText = document.querySelector('[data-conversion-status-target="statusText"]');
        const initialStatus = statusText ? statusText.textContent.toLowerCase() : 'pending';
        
        // Initialize progress bar
        const progressBar = document.getElementById('progress-bar');
        if (progressBar) {
          // Set initial width based on status
          if (initialStatus === 'completed') {
            progressBar.style.width = '100%';
            currentProgressWidth = 100;
          } else if (initialStatus === 'processing') {
            progressBar.style.width = '40%';
            currentProgressWidth = 40;
            // Start continuous animation for processing
            setTimeout(() => {
              startProgressAnimation();
            }, 300);
          } else {
            progressBar.style.width = '5%';
            currentProgressWidth = 5;
            // For pending, animate to 15% first, then continue with polling
            setTimeout(() => {
              updateProgressBar('pending');
            }, 300);
          }
        }
        
        // Start polling for status updates
        startPolling(conversionId);
        
        // Add backup mechanism for very long conversions
        const maxWaitTime = 600000; // 10 minutes
        setTimeout(() => {
          checkFinalStatus(conversionId);
        }, maxWaitTime);
      })
      .catch(error => {
        console.error('Status fetch error:', error);
        
        // Show error and redirect to the show page for the conversion
        alert(`Error loading conversion status: ${error.message}. Redirecting to conversion page...`);
        window.location.href = `/conversions/${conversionId}`;
      });
  }
  
  // Global variable to track the current animation state
  let currentProgressWidth = 0;
  let progressAnimationActive = false;

  function startProgressAnimation() {
    const progressBar = document.getElementById('progress-bar');
    if (!progressBar) return;
    
    // Clear any existing animation interval
    stopProgressAnimation();
    
    // Start from current position or 5% if not set
    currentProgressWidth = parseInt(progressBar.style.width) || 5;
    progressBar.style.width = `${currentProgressWidth}%`;
    
    // Flag that animation is active
    progressAnimationActive = true;
    
    // Create a more balanced animation that better matches the conversion process
    // Now slower at the start and faster at the end
    window.progressAnimationInterval = setInterval(() => {
      // Stop if we've reached near 100% or animation is no longer active
      if (currentProgressWidth >= 95 || !progressAnimationActive) {
        stopProgressAnimation();
        return;
      }
      
      // Calculate increment based on current progress
      // Adjusted to be slower at start, moderate in middle, and faster toward end
      let increment;
      
      if (currentProgressWidth < 20) {
        // Slower start (0-20%)
        increment = 0.2;
      } else if (currentProgressWidth < 50) {
        // Medium speed (20-50%)
        increment = 0.25;
      } else if (currentProgressWidth < 70) {
        // Slightly faster (50-70%)
        increment = 0.3;
      } else {
        // Fastest at the end (70-95%)
        increment = 0.4;
      }
      
      // Update the current width
      currentProgressWidth += increment;
      progressBar.style.width = `${currentProgressWidth}%`;
    }, 200); // Update every 200ms for smooth animation
  }

  function stopProgressAnimation() {
    progressAnimationActive = false;
    if (window.progressAnimationInterval) {
      clearInterval(window.progressAnimationInterval);
      window.progressAnimationInterval = null;
    }
  }

  function updateProgressBar(status, instant = false) {
    const progressBar = document.getElementById('progress-bar');
    if (!progressBar) return;

    let targetWidth;
    
    switch(status) {
      case 'pending':
        targetWidth = 10;
        break;
      case 'processing':
        // For processing, continue the animation instead of setting a fixed width
        if (!progressAnimationActive) {
          startProgressAnimation();
        }
        return;
      case 'completed':
        // For completed, jump to 100% immediately
        stopProgressAnimation();
        targetWidth = 100;
        instant = true; // Always use instant transition for completion
        break;
      case 'failed':
        // Stop animation and keep current width
        stopProgressAnimation();
        return;
      default:
        return;
    }
    
    // Set the width with or without animation
    if (instant) {
      currentProgressWidth = targetWidth;
      progressBar.style.width = `${targetWidth}%`;
    } else {
      // Simple transition to target
      progressBar.style.width = `${targetWidth}%`;
      currentProgressWidth = targetWidth;
    }
  }


    
  
  function startPolling(conversionId) {
    // Clear any existing polling
    clearPolling();
    
    // Start with more frequent checks initially (every 1 second for the first 15 seconds)
    // This helps catch copyright issues faster
    let checkCount = 0;
    const initialInterval = 1000; // 1 second
    const regularInterval = 3000; // 3 seconds
    let currentInterval = initialInterval;
    
    // Set up new polling
    pollingInterval = setInterval(() => {
      checkConversionStatus(conversionId);
      
      // After 15 checks (15 seconds), switch to slower polling
      checkCount++;
      if (checkCount === 15) {
        clearInterval(pollingInterval);
        pollingInterval = setInterval(() => {
          checkConversionStatus(conversionId);
        }, regularInterval);
      }
    }, initialInterval);
    
    // Add safety timeout to stop polling after 10 minutes
    setTimeout(() => {
      clearPolling();
      console.log("Safety timeout reached, stopping polling");
      
      // Add a final check
      checkConversionStatus(conversionId);
    }, 600000); // 10 minutes
  }
  
  function checkConversionStatus(conversionId) {
    console.log(`Checking status for conversion: ${conversionId}`);
    
    // Add cache-busting and no-cache headers
    fetch(`/conversions/${conversionId}.json?nocache=${new Date().getTime()}`, {
      cache: 'no-store',
      headers: {
        'Cache-Control': 'no-cache, no-store, must-revalidate',
        'Pragma': 'no-cache',
        'Expires': '0'
      }
    })
      .then(response => response.json())
      .then(data => {
        console.log("Status received:", data.status, "Error:", data.error_message);
        
        // Check for failed status immediately
        if (data.status === 'failed') {
          console.log("Conversion failed, updating UI immediately...");
          
          // Stop animation and polling immediately
          stopProgressAnimation();
          clearPolling();
          
          // Update status text
          const statusText = document.querySelector('[data-conversion-status-target="statusText"]');
          if (statusText) {
            statusText.textContent = 'Failed';
          }
          
          // Show error message
          const errorMsg = document.querySelector('[data-conversion-status-target="errorMessage"]');
          const errorText = document.querySelector('[data-conversion-status-target="errorText"]');
          
          if (errorMsg) {
            errorMsg.classList.remove('hidden');
          }
          
          if (errorText && data.error_message) {
            errorText.textContent = data.error_message;
          }
          
          // Hide the regular "Convert Another Video" link in favor of the error-specific one
          const convertAnotherLink = document.querySelector('.mt-4.text-center');
          if (convertAnotherLink) {
            convertAnotherLink.classList.add('hidden');
          }
          
          // Hide the manual refresh button if it's visible
          const manualRefresh = document.getElementById('manual-refresh');
          if (manualRefresh) {
            manualRefresh.classList.add('hidden');
          }
          
          return; // Stop further processing
        }
        
        // For non-failed statuses, update normally
        updateStatusUI(data);
        
        // If completed, stop polling
        if (data.status === 'completed') {
          clearPolling();
        }
      })
      .catch(error => {
        console.error("Error checking status:", error);
        // Continue polling despite errors
      });
  }
  
  function updateStatusUI(data) {
    // Update the status text
    const statusText = document.querySelector('[data-conversion-status-target="statusText"]');
    if (statusText) {
      statusText.textContent = capitalizeFirstLetter(data.status);
    }
    
    // Update progress container class for processing state
    const progressContainer = document.querySelector('.progress-container');
    if (progressContainer) {
      if (data.status === 'processing') {
        progressContainer.classList.add('processing');
      } else {
        progressContainer.classList.remove('processing');
      }
    }
    
    // For completed status, immediately show 100% before showing download button
    if (data.status === 'completed') {
      // First update progress to 100%
      updateProgressBar('completed');
      
      // Then show download button
      const downloadBtn = document.querySelector('[data-conversion-status-target="downloadButton"]');
      if (downloadBtn) {
        downloadBtn.classList.remove('hidden');
      }
      
      // Show details
      const detailsPanel = document.querySelector('[data-conversion-status-target="details"]');
      if (detailsPanel) {
        detailsPanel.classList.remove('hidden');
        
        // Update title and duration
        const titleElement = document.querySelector('[data-conversion-status-target="title"]');
        if (titleElement && data.title) {
          titleElement.textContent = data.title;
        }
        
        const durationElement = document.querySelector('[data-conversion-status-target="duration"]');
        if (durationElement && data.duration) {
          durationElement.textContent = data.duration;
        }
      }
    } else if (data.status === 'failed') {
      // Stop progress animation immediately
      stopProgressAnimation();
      
      // Show error message
      const errorMsg = document.querySelector('[data-conversion-status-target="errorMessage"]');
      const errorText = document.querySelector('[data-conversion-status-target="errorText"]');
      
      if (errorMsg) {
        errorMsg.classList.remove('hidden');
        
        // Add appropriate classes based on error type
        if (data.error_message && data.error_message.includes('copyright claim')) {
          errorMsg.querySelector('div').classList.add('border-yellow-500', 'bg-yellow-50', 'text-yellow-800');
        }
      }
      
      if (errorText && data.error_message) {
        errorText.textContent = data.error_message;
      }
      
      // Clear any pending status checks or refresh notices
      clearPolling();
      
      // Remove any existing "check status" or "refresh" buttons
      const existingButtons = document.querySelectorAll('.status-check-button, .refresh-notice');
      existingButtons.forEach(button => button.remove());
    } else {
      // For pending or processing, update progress normally
      updateProgressBar(data.status);
    }
  }
  
  function checkFinalStatus(conversionId) {
    const statusText = document.querySelector('[data-conversion-status-target="statusText"]');
    if (statusText && statusText.textContent.toLowerCase() !== 'completed' && statusText.textContent.toLowerCase() !== 'failed') {
      console.log("Performing backup status check after max wait time");
      
      fetch(`/conversions/${conversionId}.json?_=${new Date().getTime()}`, {
        headers: {
          'Cache-Control': 'no-cache'
        }
      })
      .then(response => response.json())
      .then(data => {
        // Only show completion message if status is actually completed
        if (data.status === 'completed') {
          console.log("Backup check: Conversion is actually complete - updating UI");
          
          // Update UI to show completed
          statusText.textContent = "Completed";
          
          // Update progress bar to 100% - force instant update
          updateProgressBar('completed', true);
          
          // Show download button
          const downloadBtn = document.querySelector('[data-conversion-status-target="downloadButton"]');
          if (downloadBtn) downloadBtn.classList.remove('hidden');
          
          // Show user a helpful message
          console.log("Adding auto-refresh notice");
          const refreshNotice = document.createElement('div');
          refreshNotice.className = 'mt-4 text-indigo-600 text-center refresh-notice';
          refreshNotice.innerHTML = 'Processing complete! If the download button doesn\'t appear, please <a href="javascript:window.location.reload()" class="underline">refresh the page</a>.';
          statusText.parentNode.appendChild(refreshNotice);
        } 
        // Handle failed status
        else if (data.status === 'failed') {
          // Just update the status text, the error message should already be shown
          statusText.textContent = "Failed";
          
          // Make sure error message is visible
          const errorMsg = document.querySelector('[data-conversion-status-target="errorMessage"]');
          if (errorMsg) errorMsg.classList.remove('hidden');
        }
      })
      .catch(error => console.error("Error in backup check:", error));
    }
  }
  
  function capitalizeFirstLetter(string) {
    if (!string) return '';
    return string.charAt(0).toUpperCase() + string.slice(1);
  }
  
  function clearPolling() {
    if (pollingInterval) {
      clearInterval(pollingInterval);
      pollingInterval = null;
    }
    
    // Also clear any progress animation
    if (window.progressAnimationInterval) {
      clearInterval(window.progressAnimationInterval);
      window.progressAnimationInterval = null;
    }
  }
  
  function resetToInitialState() {
    // Hide status container and show form container
    document.getElementById('conversion-status-container').classList.add('hidden');
    document.getElementById('conversion-status-container').innerHTML = '';
    document.getElementById('conversion-form-container').classList.remove('hidden');
    
    // Reset the form
