<%# app/views/conversions/_conversion_form.html.erb %>
<div class="bg-white shadow-md rounded-lg p-6 mb-8">
  <h2 class="text-xl font-semibold text-gray-800 mb-4">Convert YouTube to MP3</h2>
  
  <%= form_with model: Conversion.new, local: false, id: "conversion-form", class: "space-y-4" do |f| %>
    <div>
      <%= f.label :url, "YouTube URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="mt-1 flex rounded-md shadow-sm">
        <%= f.text_field :url, 
          placeholder: "https://www.youtube.com/watch?v=...", 
          class: "flex-1 min-w-0 block w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500",
          required: true %>
      </div>
    </div>
    
    <div>
      <%= f.label :quality, "Audio Quality", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="mt-1">
        <%= f.select :quality, 
          options_for_select([["High Quality (320kbps)", "320"], ["Medium Quality (192kbps)", "192"], ["Low Quality (128kbps)", "128"]], "320"), 
          {}, 
          { class: "block w-full px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" } %>
      </div>
      <p class="mt-1 text-xs text-gray-500">Higher quality = larger file size</p>
    </div>
    
    <div class="pt-2">
      <%= f.submit "Convert", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>